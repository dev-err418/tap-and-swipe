generator client {
  provider   = "prisma-client"
  output     = "../lib/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String          @id @default(cuid())
  discordId          String          @unique
  discordUsername    String
  discordAvatar      String?
  discordAccessToken String?
  stripeCustomerId   String?         @unique
  paddleCustomerId   String?         @unique
  paymentProvider    String?         // "stripe" | "paddle" | "whop"
  subscriptionId     String?         @unique
  subscriptionStatus String?
  roleGranted        Boolean         @default(false)
  lessonProgress     LessonProgress[]
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  @@index([stripeCustomerId])
  @@index([paddleCustomerId])
  @@index([subscriptionId])
}

model Lesson {
  id              String           @id @default(cuid())
  category        String
  title           String
  description     String?
  type            String           @default("video")
  youtubeUrl      String?
  markdownContent String?
  order           Int
  progress        LessonProgress[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([category, order])
  @@map("Video")
}

model LessonProgress {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  lessonId    String    @map("videoId")
  lesson      Lesson    @relation(fields: [lessonId], references: [id])
  completedAt DateTime  @default(now())
  uncheckedAt DateTime?

  @@unique([userId, lessonId], map: "VideoProgress_userId_videoId_key")
  @@index([userId], map: "VideoProgress_userId_idx")
  @@map("VideoProgress")
}

model RevenueCatEvent {
  id          String   @id @default(cuid())
  eventId     String   @unique
  appName     String
  eventType   String
  periodType  String?
  productId   String?
  appUserId   String?
  price       Float    @default(0)
  currency    String   @default("USD")
  store       String?
  environment String   @default("PRODUCTION")
  rawPayload  Json?
  createdAt   DateTime @default(now())

  @@index([appName, createdAt])
  @@index([eventType, periodType, createdAt])
}

model TrialDiscordMessage {
  id                    String   @id @default(cuid())
  appName               String
  appUserId             String
  originalTransactionId String
  discordMessageId      String
  createdAt             DateTime @default(now())

  @@unique([appName, originalTransactionId])
  @@index([appUserId])
}
